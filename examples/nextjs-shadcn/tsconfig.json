{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/components/*": [
        "../../packages/react-ui-shadcn/src/@/components/*"
      ],
      "@/lib/*": [
        "../../packages/react-ui-shadcn/src/@/lib/*"
      ],
      "src/@/lib/*": [
        "../../packages/react-ui-shadcn/src/@/lib/*"
      ],
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}